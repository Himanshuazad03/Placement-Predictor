<%- include('./partials/header') %>

<main class="flex-1 pt-24 pb-20 px-6 transition-colors duration-500 
    bg-gradient-to-br from-emerald-100 via-green-200 to-teal-100 
    dark:bg-gradient-to-r dark:from-gray-900 dark:via-gray-800 dark:to-black">

  <!-- Hero Section -->
  <section class="max-w-5xl mx-auto mb-16 text-center">
    <h1 class="text-4xl md:text-5xl font-extrabold text-emerald-700 dark:text-gray-100 leading-tight mb-6 drop-shadow-md">
      Skills & Placement Prediction Portal
    </h1>
    <p class="text-lg md:text-xl text-gray-700 dark:text-gray-200 leading-relaxed max-w-3xl mx-auto font-sans">
      This platform has been developed exclusively for the students of 
      <span class="font-semibold text-emerald-800 dark:text-gray-100">Madhav Institute of Technology and Science (MITS), Gwalior</span>.
      It provides a data-driven evaluation of student skills and predicts placement status with the help of
      advanced <span class="font-semibold text-emerald-800 dark:text-gray-100">Machine Learning models</span>.
    </p>
    <div class="mt-8 flex justify-center">
      <a href="#predictForm" 
         class="px-8 py-3 
         bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 
         dark:bg-none dark:bg-indigo-600 dark:hover:bg-indigo-700
         text-white font-semibold rounded-xl shadow-lg 
         transition transform hover:scale-105">
        Get Your Prediction
      </a>
    </div>
  </section>

  <!-- Info Cards -->
  <section class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-6xl mx-auto mb-16">
    
    <!-- Skills Rating -->
    <div class="relative rounded-2xl shadow-xl p-6 
         bg-white/70 dark:bg-white/10 backdrop-blur-md 
         border border-emerald-100 dark:border-white/10 overflow-hidden transition-transform hover:scale-105">
      <div class="absolute inset-0 bg-gradient-to-br from-emerald-200/40 to-teal-300/40 dark:from-indigo-600/10 dark:to-purple-700/10 pointer-events-none"></div>
      <div class="relative z-10">
        <h3 class="text-xl font-bold text-emerald-700 dark:text-indigo-300 mb-2">Skills Rating</h3>
        <p class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed">
          Evaluates proficiency in programming, development, data tools, and system knowledge. 
          Generates a <span class="font-semibold">rating out of 10.</span>
        </p>
      </div>
    </div>

    <!-- Placement Prediction -->
    <div class="relative rounded-2xl shadow-xl p-6 
         bg-white/70 dark:bg-white/10 backdrop-blur-md 
         border border-emerald-100 dark:border-white/10 overflow-hidden transition-transform hover:scale-105">
      <div class="absolute inset-0 bg-gradient-to-br from-emerald-200/40 to-teal-300/40 dark:from-indigo-600/10 dark:to-purple-700/10 pointer-events-none"></div>
      <div class="relative z-10">
        <h3 class="text-xl font-bold text-emerald-700 dark:text-indigo-300 mb-2">Placement Prediction</h3>
        <p class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed">
          Combines skills rating with academic and profile features such as CGPA, internships, projects, aptitude,
          and SSC marks. Predicts placement likelihood with <span class="font-semibold">88% accuracy</span>.
        </p>
      </div>
    </div>

    <!-- Objective -->
    <div class="relative rounded-2xl shadow-xl p-6 
         bg-white/70 dark:bg-white/10 backdrop-blur-md 
         border border-emerald-100 dark:border-white/10 overflow-hidden transition-transform hover:scale-105">
      <div class="absolute inset-0 bg-gradient-to-br from-emerald-200/40 to-teal-300/40 dark:from-indigo-600/10 dark:to-purple-700/10 pointer-events-none"></div>
      <div class="relative z-10">
        <h3 class="text-xl font-bold text-emerald-700 dark:text-indigo-300 mb-2">Objective</h3>
        <p class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed">
          To guide students with personalized insights, support faculty in training efforts, and 
          encourage a <span class="font-semibold">data-driven approach</span> to placement preparation.
        </p>
      </div>
    </div>
  </section>

  <!-- Prediction Form -->
  <div class="relative max-w-3xl mx-auto rounded-2xl shadow-2xl p-8 
       bg-white/80 dark:bg-white/10 backdrop-blur-xl 
       border border-emerald-200 dark:border-white/10 transition-colors duration-500 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-emerald-200/40 to-teal-300/40 dark:from-indigo-600/10 dark:to-purple-700/10 pointer-events-none"></div>
    
    <div class="relative z-10">
      <h2 class="text-3xl font-bold text-center text-emerald-700 dark:text-gray-100 mb-6">Placement Prediction Form</h2>
      <p class="text-center text-gray-600 dark:text-gray-300 mb-10">
        Fill out the details below to get your personalized placement prediction.
      </p>

      <form id="predictForm" novalidate class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-600 dark:text-gray-300 mb-1">CGPA</label>
          <input type="number" step="0.01" name="cgpa" placeholder="e.g. 7.8" min="0" id="cgpa"
            class="w-full px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-emerald-500 outline-none 
                   dark:bg-gray-700 dark:text-gray-100 dark:border-gray-600">
          <p id="cgpaError" class="text-red-500 text-sm mt-1 hidden">⚠️ CGPA must be less than or equal to 10</p>
        </div>
      </form>

      <div class="mt-10 flex justify-center">
        <button type="submit" form="predictForm" id="predictBtn"
          class="px-8 py-3 bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 
                 text-white font-semibold rounded-xl shadow-lg transition transform hover:scale-105">
          Predict Placement
        </button>
      </div>

      <!-- Result Box -->
      <div id="resultBox" class="relative max-w-3xl mx-auto mt-8 hidden rounded-2xl shadow-xl p-6 text-center 
           bg-white/80 dark:bg-white/10 backdrop-blur-xl 
           border border-emerald-200 dark:border-white/10 overflow-hidden transition-colors duration-500">
        <div class="absolute inset-0 bg-gradient-to-br from-emerald-200/40 to-teal-300/40 dark:from-indigo-600/10 dark:to-purple-700/10 pointer-events-none"></div>
        <div class="relative z-10">
          <h3 class="text-2xl font-bold text-emerald-700 dark:text-gray-100 mb-2">Prediction Result</h3>
          <p id="resultText" class="text-gray-700 dark:text-gray-200"></p>
          <div class="w-full bg-gray-200 dark:bg-gray-600 rounded-full h-4 overflow-hidden">
            <div id="progressBar" class="h-4 rounded-full bg-emerald-500 w-0 transition-all duration-700"></div>
          </div>
          <div id="adviceBox" class="mt-6 text-left text-gray-700 dark:text-gray-200 hidden">
            <p class="text-xl font-bold">Tips:</p>
            <ul id="adviceList" class="list-disc ml-6"></ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('./partials/footer') %>
