<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Placement Predictor</title>
  <script src="https://cdn.tailwindcss.com"></script>

  <script>
  (function() {
    const theme = localStorage.getItem('theme');
    if (theme === 'dark') {
      document.documentElement.classList.add('dark');
    } else {
      document.documentElement.classList.remove('dark');
      if (!theme) localStorage.setItem('theme', 'light');
    }
  })();
</script>

  <script>
    tailwind.config = {
    darkMode: 'class',
    }
  </script>
  <link rel="stylesheet" href="/stylesheet/style.css">
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 flex flex-col">

  <!-- Header -->
  <!-- Header -->
<header class="bg-[#fafffd] dark:bg-[#1a2233] shadow-md fixed top-0 left-0 w-full z-50 border-b border-indigo-400 dark:border-gray-700 transition-colors duration-500">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-6 h-20">
    
    <!-- Logo + Title -->
    <div class="flex items-center">
      <img src="/images/mits-logo.png" class="h-14 w-14 object-contain" alt="MITS Logo">
      <div class="flex flex-col justify-center items-center ml-4">
        <h2 class="text-blue-800 dark:text-gray-200 text-sm font-semibold whitespace-nowrap">
          माधव प्रौद्योगिकी एवं विज्ञान संस्थान, ग्वालियर
        </h2>
        <h3 class="text-blue-800 dark:text-gray-200 text-xs font-medium whitespace-nowrap">
          Madhav Institute of Technology & Science, Gwalior
        </h3>
        <p class="text-red-600 dark:text-red-400 text-xs font-medium mt-1 whitespace-nowrap">
          Deemed University
        </p>
      </div>
    </div>

    <!-- Navigation -->
    <nav class="hidden md:flex items-center gap-6 text-gray-700 dark:text-gray-200 font-medium">
      
      <!-- Home -->
      <a href="/home"
         class="relative pb-1 transition-colors duration-300 <%= currentPage === 'home' ? 'text-emerald-600 dark:text-indigo-400 after:w-full' : 'hover:text-emerald-600 dark:hover:text-indigo-400' %>
                after:content-[''] after:absolute after:left-0 after:-bottom-1 after:h-[2px] after:bg-emerald-600 dark:after:bg-indigo-400 after:transition-all after:duration-300 after:w-0 hover:after:w-full">
         Home
      </a>

      <!-- Skill Rating -->
      <% if (user) { %>
      <a href="/skill"
         class="relative pb-1 transition-colors duration-300 <%= currentPage === 'skill' ? 'text-emerald-600 dark:text-indigo-400 after:w-full' : 'hover:text-emerald-600 dark:hover:text-indigo-400' %>
                after:content-[''] after:absolute after:left-0 after:-bottom-1 after:h-[2px] after:bg-emerald-600 dark:after:bg-indigo-400 after:transition-all after:duration-300 after:w-0 hover:after:w-full">
         Skill Rating
      </a>
      <% } %>

      <!-- Developer -->
      <a href="/developer"
         class="relative pb-1 transition-colors duration-300 <%= currentPage === 'developer' ? 'text-emerald-600 dark:text-indigo-400 after:w-full' : 'hover:text-emerald-600 dark:hover:text-indigo-400' %>
                after:content-[''] after:absolute after:left-0 after:-bottom-1 after:h-[2px] after:bg-emerald-600 dark:after:bg-indigo-400 after:transition-all after:duration-300 after:w-0 hover:after:w-full">
         Developer
      </a>

      <% if (user) { %>
        <!-- Logout -->
        <a href="/logout"
           class="relative pb-1 hover:text-emerald-600 dark:hover:text-indigo-400 after:content-[''] after:absolute after:left-0 after:-bottom-1 after:h-[2px] after:bg-emerald-600 dark:after:bg-indigo-400 after:transition-all after:duration-300 after:w-0 hover:after:w-full">
           Logout
        </a>
      <% } else { %>
        <!-- Login -->
        <a href="/login"
           class="relative pb-1 transition-colors duration-300 <%= currentPage === 'login' ? 'text-emerald-600 dark:text-indigo-400 after:w-full' : 'hover:text-emerald-600 dark:hover:text-indigo-400' %>
                  after:content-[''] after:absolute after:left-0 after:-bottom-1 after:h-[2px] after:bg-emerald-600 dark:after:bg-indigo-400 after:transition-all after:duration-300 after:w-0 hover:after:w-full">
           Login
        </a>
      <% } %>

      <!-- Theme Toggle -->
      <button id="themeToggle" 
              class="ml-4 rounded-full bg-indigo-500 w-[40px] h-[40px] flex justify-center items-center hover:bg-indigo-600 
                     dark:bg-indigo-600 dark:hover:bg-indigo-500 text-white shadow transition relative">
        <i id="sunIcon" class="fa-solid fa-sun text-xl hidden dark:inline-block"></i>
        <i id="moonIcon" class="fa-solid fa-moon text-xl inline-block dark:hidden"></i>
      </button>
    </nav>
  </div>
</header>

